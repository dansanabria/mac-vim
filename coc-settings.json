{
  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform", "tf"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "yaml.schemas": {
    "http://json.schemastore.org/helmfile": "/Users/dan/workarea/fdx/helm-charts/*.yaml",
    "kubernetes": "/*.yaml",
    "https://raw.githubusercontent.com/docker/compose/master/compose/config/config_schema_v3.7.json": "/docker-compose.yml",
    "https://raw.githubusercontent.com/microsoft/azure-pipelines-vscode/master/service-schema.json": "/*.yml"
  },
  "yaml.validate": false,
  "coc.preferences.extensionUpdateCheck": "daily",
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "gosnippets/UltiSnips"
  ],
  "snippets.snipmate.enable": true
}
